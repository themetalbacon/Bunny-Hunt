<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".kitchen"
    android:background="@drawable/kitchen">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stove"
        android:src="@drawable/stoveclocksmall"
        android:background="@null"
        android:layout_below="@+id/heart3kitch"
        android:layout_toLeftOf="@+id/chair"
        android:layout_toStartOf="@+id/chair"
        android:layout_marginTop="56dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fridge"
        android:src="@drawable/fridgesmall"
        android:layout_alignBottom="@+id/stove"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@null" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/table"
        android:src="@drawable/tablesmall"
        android:translationZ="1dp"
        android:background="@null"
        android:layout_marginBottom="144dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chair"
        android:src="@drawable/bunnychair"
        android:background="@null"
        android:layout_alignBottom="@+id/table"
        android:layout_toRightOf="@+id/pot"
        android:layout_toEndOf="@+id/pot" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pot"
        android:src="@drawable/pot"
        android:background="@null"
        android:layout_alignTop="@+id/stove"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/hintTextKitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/hintButtonKitch"
        android:layout_alignRight="@+id/fridge"
        android:layout_alignEnd="@+id/fridge"
        android:layout_below="@+id/chair" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:id="@+id/hintButtonKitch"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pot"
        android:layout_toStartOf="@+id/pot" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heart1kitch"
        android:src="@drawable/heart45"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/halfheart1kitch"
        android:src="@drawable/halfheart45"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heart2kitch"
        android:src="@drawable/heart45"
        android:layout_below="@+id/heart1kitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/halfheart2kitch"
        android:src="@drawable/halfheart45"
        android:visibility="invisible"
        android:layout_alignTop="@+id/heart2kitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heart3kitch"
        android:src="@drawable/heart45"
        android:layout_below="@+id/heart2kitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/halfheart3kitch"
        android:src="@drawable/halfheart45"
        android:visibility="invisible"
        android:layout_below="@+id/heart2kitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/hintDispKitch"
        android:layout_alignTop="@+id/hintButtonKitch"
        android:layout_toRightOf="@+id/table"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/hintButtonKitch"
        android:layout_alignRight="@+id/chair"
        android:layout_alignEnd="@+id/chair" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelUpKitch"
        android:src="@drawable/arrow"
        android:background="@null"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/hintDispKitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
